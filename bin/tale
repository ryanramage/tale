#!/usr/bin/env node

var fs = require('fs'),
    url = require('url'),
    path = require('path'),
    http = require('http'),
    cpr = require('cpr'),
    glob = require('glob'),
    open = require('open'),
    read = require('read'),
    async = require('async'),
    mkdirp = require('mkdirp'),
    uuid = require('node-uuid'),
    connect = require('connect'),
    request = require('request'),
    readline = require('readline'),
    md5 = require('md5-component'),
    browserify = require('browserify'),
    init = require('init-package-json'),
    packager = require('../lib/packager'),
    app_cache = require('../lib/appcache'),
    find_root = require('../lib/find-root'),
    FileStore = require('../lib/file-store'),
    argv = require('minimist')(process.argv.slice(2)),
    cached_creds_file = path.resolve(process.env.HOME, '.tale.json'),
    cached_creds,
    auth_fails = 0,
    portrange = 45032;

try { cached_creds = require(cached_creds_file) } catch(e){}

if (argv._.length === 0) package();
if (argv._[0] === 'package') package();
if (argv._[0] === 'init') initialize();
if (argv._[0] === 'serve') serve();
if (argv._[0] === 'publish') publish();

function initialize() {
  var dir = process.cwd();
  var initFile = require.resolve('../lib/basic-init.js')
  init(dir, initFile, function (err, data) {
    if (err) return console.error('could not write package.json');

    var dist_dir = path.resolve(dir, 'dist'),
        build_dir = path.resolve(dist_dir, 'build'),
        tale_dir = path.resolve(dir, 'tale'),
        npm_dst = path.resolve(dir, 'node_modules'),
        npm_src = path.resolve(__dirname, '../node_modules' ),
        loader_js_src = path.resolve(__dirname, '../html/js/loader.js' )
        loader_js_dst  = path.resolve(dir, 'index.js'),
        index_html_src = path.resolve(__dirname, '../html/index.html' ),
        index_html_dst = path.resolve(dist_dir, 'index.html'),
        bootstrap_js_src = path.resolve(__dirname, '../html/js/bootstrap.js' ),
        bootstrap_js_dst = path.resolve(dist_dir, 'bootstrap.js' ),
        bootstrap_css_src = path.resolve(__dirname, '../html/css/bootstrap.min.css' ),
        bootstrap_css_dst = path.resolve(dist_dir, 'bootstrap.min.css' ),

    mkdirp.sync( build_dir );
    mkdirp.sync( tale_dir );
    mkdirp.sync( npm_dst );


    async.parallel([
      make_chapters.bind(null, tale_dir),
      fast_copy.bind(null, loader_js_src, loader_js_dst),
      fast_copy.bind(null, index_html_src, index_html_dst),
      fast_copy.bind(null, bootstrap_js_src, bootstrap_js_dst),
      fast_copy.bind(null, bootstrap_css_src, bootstrap_css_dst)
    ], function(err){
      if (err) return console.log(err);
      npm_install(['tale-browser', 'tale-plugin-markdown'], function(err){
        if (err) return console.log(err);

        oboe_hack(npm_dst, function(){
          console.log('done');
        })
      })
    })
  })
}

function oboe_hack(npm_dir, cb){
  var to_hack = path.resolve(npm_dir, 'tale-browser/node_modules/tale-read-api/node_modules/oboe/package.json')
  var json = require(to_hack);
  json.browser =  "./dist/oboe-browser.js"
  fs.writeFileSync(to_hack, JSON.stringify(json));


  var to_overwrite = path.resolve(npm_dir, 'tale-browser/node_modules/tale-read-api/node_modules/oboe/dist/oboe-browser.js'),
      src = path.resolve(__dirname, '../html/js/oboe-browser.js')

  fast_copy(src, to_overwrite, cb)


}


function symlink_pkg(dir, dist_dir, cb){
  var src = path.resolve(dir, 'package.json'),
      dst = path.resolve(dist_dir, 'package.json');
  fs.symlink(src, dst, cb);
}

function make_chapters(tale_dir, cb) {
  read({prompt: "Number of chapters to create? ", default: "2" }, function (err, num) {
    if (err) cb('I did not understand that.');

    var num_chapters = Number(num);
    async.times(num_chapters, function(n, cb){
      var human = n + 1;
      var end = (human == num_chapters);
      writeChapter(human, end, tale_dir, cb);
    }, cb)
  })
}

function npm_install(packages, cb){
  var npm = require("npm")
  npm.on('log', function(){})
  npm.load(function (err) {
    if (err) return cb(err);
    npm.commands.install(packages, cb);
  });
}


function npm_copy(npm_src, npm_dst, pkg_name){
  var from = path.resolve( npm_src, pkg_name ),
      to = path.resolve( npm_dst, pkg_name );
  console.log('copy', from, to);
  return cpr.bind(null, from, to)
}

function fast_copy(src, dst, cb) {
  var index_js = fs.createWriteStream( dst )
  index_js.on('close', cb)

  fs.createReadStream( src )
    .pipe( index_js )
}

function browserify_index(loader_js_path, browserify_dst_path, cb ){
  var b = browserify();
  b.add( loader_js_path )
  b.bundle(cb).pipe( fs.createWriteStream( browserify_dst_path ) )
}

function package(){
  var dir = argv.i || find_root('.'),
      loader_js_path  = path.resolve(dir, 'index.js'),
      package_path = path.resolve(dir, 'package.json'),
      dist_dir = path.resolve(dir, 'dist'),
      build_dir = path.resolve(dist_dir, 'build'),
      browserify_dst_path = path.resolve(build_dir, 'tale.js'),
      app_cache_dst_path = path.resolve(build_dir, 'story.appcache'),
      tale_dir = path.resolve(dir, 'tale'),
      proof_dir = argv.p || path.resolve(dir, './proofs'),
      file_store = FileStore(path.normalize(build_dir), path.normalize(proof_dir), {
        js_in_manifest:   argv.no_js_in_manifest || true,
        write_index_html: argv.no_index_html || true,
        write_tale_js:    argv.no_tale_js || true
      });
  console.log('starting...')
  console.log('building tale dir', tale_dir)
  packager( path.normalize(tale_dir), package_path, file_store, function(err, graph){
    if (err) return console.error("Error:", err);
    console.log('building tale complete')
    console.log('browserify ', loader_js_path)
    browserify_index(loader_js_path, browserify_dst_path, function(err){
      if (err) return console.log(err);

      app_cache.dir(build_dir, graph, {}, fs.createWriteStream(app_cache_dst_path), function(err){
        if (err) return console.log(err);
        console.log('\tbuild dir: ', build_dir);
        console.log('\tproof dir: ', proof_dir);
        console.log("Build complete. ");
      })
    })


  })
}

function publish(_email, _token) {
  var dir = argv.i || find_root('.'),
      dist_dir = argv.o || path.resolve(dir, './dist'),
      build_dir = path.resolve(dist_dir, './build'),
      proof_file = argv.p || path.resolve(dir, './proofs/proofs.json'),
      dest = argv._[1] || "http://t4.io",
      creds = lookup_creds(dest),
      email = _email || creds.email || argv._[2],
      token = _token || creds.token || argv._[3],
      pkg = require(build_dir + '/package.json'),
      endpoint;

  if (!email || !token) {
    return prompt();
  }
  endpoint = url.resolve(dest, '/publish/' + md5(email) + '/' + pkg.name)

  console.log('posting to', endpoint);

  var has_proofs = null;
  try { has_proofs = fs.statSync(proof_file) } catch(e){}

  var req_opts = {
    url: endpoint,
    qs: { access_token: token }
  }

  glob('**/*', {cwd: dist_dir, mark: true }, function(err, files){
    var r = request.post(req_opts, function(err, resp, body){
      if (err) return console.error("Upload Failed: ", err);
      if (resp.statusCode === 401) return prompt(true);

      var resp = JSON.parse(body);
      var location = url.resolve(dest, resp.id) + '/';

      if (resp.msg) console.log('Server message: ', resp.msg);
      console.log('Upload success, available at:');
      console.log(location);
      save_creds(dest, creds, email, token)
    })
    var form = r.form()
    if (has_proofs){
      form.append('proofs.json', fs.createReadStream(proof_file));
    }
    for (var i=0; i<files.length; i++){
      var file = files[i];
      if (! /\/$/.test(file)) { // ignore directories (ending in / )
        form.append(files[i], fs.createReadStream(path.join(dist_dir, files[i])));
      }
    }
  })
}


function lookup_creds(host){
  if (!cached_creds) return {};
  if (!cached_creds[host]) return {};
  return cached_creds[host];
}

function save_creds(host, creds, email, token) {
  var to_save = false;
  if (!cached_creds){
    to_save = true;
    cached_creds = {};
  }
  if (!cached_creds[host]){
    to_save = true;
    cached_creds[host] = { email: email, token: token  }
  }
  if (email !== cached_creds[host].email || token !== cached_creds[host].token) {
    to_save = true;
    cached_creds[host] = { email: email, token: token  }
  }
  if (!to_save) return;
  fs.writeFileSync(cached_creds_file, JSON.stringify(cached_creds, 0, 2));
  console.log('cached credentials in ', cached_creds_file)

}


function prompt(failure){
  if (failure) {
    if (auth_fails++ >= 3) return console.log('Aborting. Max attempts reached.');
    console.log('Authentication failure');
  }
  var rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
  });

  rl.question("email: ", function(_email) {
    rl.question("token: ", function(_token){
      publish(_email, _token);
      rl.close();
    })

  });
}





function writeChapter(number, end, dir, cb){
  var chapter = {
    "plugins":["markdown"],
    "next_folder": {}
  }, next_folder = {
    "clue": "What is the password?",
    "pass": uuid.v4().substr(0,5)
  };

  if (end) {
    chapter.text = "The End. Fin."
    chapter.end_link = "http://place.com/whats_next"
  } else {
    chapter.next_folder[ 'chapter' + (number + 1) ] = next_folder;
  }
  var chapter_dir = path.resolve(dir, 'chapter' + number);
  mkdirp.sync( chapter_dir );
  fs.writeFileSync( path.resolve(chapter_dir, 'README.md'), 'Once upon a time...')
  fs.writeFile( path.resolve(chapter_dir, 'chapter.json') , JSON.stringify(chapter,null, 4), cb);
}


function serve() {
  var dir = argv.i || find_root('.'),
      out_dir = argv.o || path.resolve(dir, './dist'),
      middleware = []
      portrange = argv._[1] || portrange;


  if (!argv.offline) {
    middleware.push(function(req, resp, next){
      if (req.url == '/story.appcache') {
        resp.writeHead(404, {});
        return resp.end();
      }
      next();
    });
  }
  middleware.push(function(req, resp, next){
      if (req.url == '/api') {
        resp.write(JSON.stringify({ok: true}));
        return resp.end();
      }
      if (req.url == '/time') {
        resp.write(JSON.stringify({ok: true, time_ms: 10000}));
        return resp.end();
      }
      next();
  })


  middleware.push( connect.static(path.resolve(out_dir)  ));
  middleware.push(connect.directory(  path.resolve(out_dir)  ))
  var app = connect.apply(null, middleware);

  getPort(app, function(port){

    server
      .listen(port, null)
      .on('listening', function() {
        console.log('server running: ', 'http://localhost:' + port);
        if (argv.b) open('http://localhost:' + port)
      })

  })
}

function getPort (app, cb) {
  var port = portrange
  portrange += 1;

  server = http.createServer(app)
  server.listen(port, function (err) {
    server.once('close', function () {
      cb(port)
    })
    server.close()
  })
  server.on('error', function (err) {
    getPort(app, cb)
  })
}
